<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="team.dao.TeamMapper">
	<select id="login" parameterType="java.util.HashMap" resultType="com.sml.team.dto.TeamDto">
		select TEAMLEADERNAME , TEAMGRADE from team where TEAMID = #{id} and TEAMPASSWORD = #{password}
	</select>
	
	<select id="viewTeamBoardList" resultType="com.sml.team.dto.TeamBoardDto">
		select * from TEAMBOARD;
	</select>
	
	<select id="scheduleList" resultType="com.sml.team.dto.ScheduleDto">
		select * from TEAMSCHEDULE
	</select>
	
	<insert id="searchMatching" parameterType="com.sml.team.dto.MatchingDto">
		insert into MATCHING values (matching_matchingcode_sql.nextval , #{teamCode} , #{matchingSport} , #{matchingDistance} , #{matchingTime} , #{matchingState})
	</insert>
	
 	<select id="idCheckSelect" parameterType="String" resultType="String">
 		select teamId from team where teamId=#{teamId}
 	</select>
 	
 	<select id="teamIdCheck" parameterType="String" resultType="String">
 		select teamName from team where teamId=#{teamName}
 	</select>

</mapper>